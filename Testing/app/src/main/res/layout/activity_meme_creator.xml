<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rushabh.testing.MemeCreator">

    <fragment
        android:id="@+id/fragment1"
        android:name="com.example.rushabh.testing.TopFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        tools:layout="@layout/top_fragment" />

    <fragment
        android:id="@+id/fragment2"
        android:name="com.example.rushabh.testing.BottomFragment"
        android:layout_width="370dp"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        tools:layout="@layout/bottom_fragment" />
</RelativeLayout>
